{
  "extends": "tslint-config-standard",
  "globals": {
    "require": true
  },
  "rules": {
    "space-before-function-paren": [true, "never"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "no-consecutive-blank-lines": false
  }
}
